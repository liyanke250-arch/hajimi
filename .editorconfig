# EditorConfig 配置文件
# 统一不同编辑器的代码风格
# https://editorconfig.org

root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown 文件特殊配置
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JSON 文件配置
[*.json]
indent_size = 2

# YAML 文件配置
[*.{yml,yaml}]
indent_size = 2

# Prisma Schema 配置
[*.prisma]
indent_size = 2

# Shell 脚本配置
[*.sh]
end_of_line = lf
